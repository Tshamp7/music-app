<br>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Welcome to the page for <%= @band.name %></h2>
        </div>
        <div class="container">
        <br>
            <h3> Albums </h3>
            <ul>
                <% if @band.albums.empty? %>
                    <li><p>No Albums yet! But you can add one!</p></li>
                <% else %>
                    <% @band.albums.each do |album| %>
                        <li><%= link_to "#{album.title}", album_path(album) %></li>
                    <% end %>
                <% end %>
            </ul>

            <%= button_to "Return to all Bands", bands_path, method: :get, class: "btn btn-sm btn-outline-secondary" %>
            <br>
            <%= button_to "Add an Album", new_band_album_path(@band), method: :get, class: "btn btn-sm btn-outline-secondary" %>
            <br>    
        </div>
    </div>
</div>